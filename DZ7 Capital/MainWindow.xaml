<Window x:Class="Capital.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capital"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition	Width="150"/>
            <ColumnDefinition	Width="*"
                                MinWidth="50"
                                MaxWidth="150"/>
            <ColumnDefinition	Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*" MinHeight="200" MaxHeight="1000"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Депозит"
                   Margin="5,5,5,5"/>
        <TextBlock Text="Начальный лот" Margin="5,5,5,5"
                   Grid.Row="1"/>
        <TextBlock Text="Тейк" Margin="5,5,5,5"
                   Grid.Row="2"/>
        <TextBlock Text="Cтon" Margin="5,5,5,5"
                   Grid.Row="3"/>
        <TextBlock Text="Комиссия" Margin="5,5,5,5"
                    Grid.Row="4"/>
        <TextBlock Text="% Процент приб."  Margin="5,5,5,5"
                   Grid.Row="5"/>
        <TextBlock Text="Кол-во сделок" Margin="5,5,5,5"
                    Grid.Row="6"/>
        <TextBlock Text="Мин. % Депо"  Margin="5,5,5,5"
                   Grid.Row="7"/>
        <TextBlock Text="Гарант. обесп"  Margin="5,5,5,5"
                   Grid.Row="9"/>
        <ComboBox Name="_comboBox"
                  Grid.Row="11" Margin="5,0,5,0"/>

        <TextBox x:Name="_depo"
                  Grid.Column="1"/>
        <TextBox x:Name="_startLot"
                  Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="_take"
                  Grid.Column="1" Grid.Row="2"/>
        <TextBox x:Name="_stop"
                  Grid.Column="1" Grid.Row="3"/>
        <TextBox x:Name="_comiss"
                  Grid.Column="1" Grid.Row="4"/>
        <TextBox x:Name="_percentProfit"
                  Grid.Column="1" Grid.Row="5"/>
        <TextBox x:Name="_countTrades"
                  Grid.Column="1" Grid.Row="6"/>
        <TextBox x:Name="_minStartPercent"
                  Grid.Column="1" Grid.Row="7"/>
        <TextBox x:Name="_go"
                  Grid.Column="1" Grid.Row="9"/>

        <Button Content="Рассчитать" 
                Click="Button_Click"
                Grid.Column="1" Grid.Row="11"/>

        <GroupBox Header ="Таблица результатов"
                  Grid.Column="2" Grid.RowSpan="12"
                  Margin="10,1,10,1">
            <!--DataGrid привязан к renderData-->
            <DataGrid x:Name="_dataGrid"                       
                      ItemsSource="{Binding}"
                      AutoGenerateColumns="False"
                      Margin="5">
                <DataGrid.Columns>
                    <!--Коммент-->
                    <DataGridTextColumn Header="Стратегия"  Binding="{Binding StrategyType}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Background" Value="{Binding LineColor}" />
                                <Setter Property="Foreground" Value="White" />
                                <!--<Setter Property="FontWeight" Value="Bold" />-->
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Депозит" Binding="{Binding Depo}" />
                    <DataGridTextColumn Header="Результат депозита" Binding="{Binding ResultDepo}" />
                    <DataGridTextColumn Header="Прибыль" Binding="{Binding Profit}" />
                    <DataGridTextColumn Header="Процент прибыли" Binding="{Binding PercentProfit}" />
                    <DataGridTextColumn Header="Максимальная просадка" Binding="{Binding MaxDrawDown}" />                                     
                    <DataGridTextColumn Header="Макс просадка %" Binding="{Binding PercentDrawDown}" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
        <GroupBox Header ="График стратегии"
            Grid.Row="13"
            Grid.ColumnSpan="3"
            Margin="10">
            <Canvas x:Name="_canvas" Background="Honeydew" >
            </Canvas>
        </GroupBox>
    </Grid>
</Window>

