<Window x:Class="WPF_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_MVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="LabelStyle" BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="TextBlock">
            <Setter Property="Width" Value="300"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="Margin" Value="10,5,5,5"/>
        </Style>

        <Style x:Key="ValueStyle" BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="TextBlock">
            <Setter Property="Width" Value="400"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextAlignment" Value="Left"/>
            <Setter Property="Margin" Value="10,5,5,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20,10,30,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Столбец с названиями -->
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <TextBlock Style="{StaticResource LabelStyle}" Text="Summ ="/>
            <TextBlock Style="{StaticResource LabelStyle}" Text="Volume ="/>
            <TextBlock Style="{StaticResource LabelStyle}" Text="Price ="/>
            <TextBlock Style="{StaticResource LabelStyle}" Text="DateTimeTrade ="/>
            <TextBlock Style="{StaticResource LabelStyle}" Text="Side ="/>
        </StackPanel>

        <!-- Столбец со значениями -->
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <TextBlock Style="{StaticResource ValueStyle}" Text="{Binding Summ}"/>
            <TextBlock Style="{StaticResource ValueStyle}" Text="{Binding Volume}"/>
            <TextBlock Style="{StaticResource ValueStyle}" Text="{Binding Price}"/>
            <TextBlock Style="{StaticResource ValueStyle}" Text="{Binding DateTimeTrade, StringFormat=G}"/>
            <TextBlock Style="{StaticResource ValueStyle}" Text="{Binding Side}"/>
        </StackPanel>
    </Grid>
</Window>

